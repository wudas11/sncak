double fact(int n) {
    if (n <= 1) {
        return n*1;
    }
    else {
        return n * fact(n-1);
    }
}
double factsum(int n) {
    double sum = 1;
    double a = 0;
    double b = 0;
    for (; n >= 1; n--) {
        for (b=n; b >= 1; b--) {
            sum = sum * b;
        }
        a += sum;
        sum = 1;
    }
    return a;
}

int main()
{
    int n;

    scanf_s("%d", &n);
    printf("fact(%d) = %.0f\n", n, fact(n));
    printf("sum = %.0f\n", factsum(n));

    return 0;
}
